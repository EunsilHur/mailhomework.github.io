<center><h1 style="color:#FDA7BC; font-weight: bold">메일 보내기</h1></center>
<form action="/write" method="post">
    <center>
    <div  style="width: 50%; text-align: left; background-color: rgba( 237, 232, 183, 0.3 ); padding: 20px">
  <div class="form-group">
    <label for="exampleInputEmail1">메일제목</label>
    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="메일제목을 입력해주세요" name="title">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">받는사람</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="받는사람 email을 입력해주세요" name="email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">메일내용</label>
    <textarea class="form-control" rows="3" name="content"></textarea>
  </div>
  <button type="submit" class="btn btn-default">전송</button>
  </div>
  </center>
</form>
<center><h1 style="color:#FDA7BC; font-weight: bold">보낸메일 목록</h1></center>
<center>
<table>
  <tr>
    <th style="padding: 7px">받는이</th>
    <th>제목</th>
    <th>날짜</th>
    <th>&nbsp;</th>
  </tr>
   <% @posts.each do |p| %>
  <tr>
    <td style="padding: 5px"><%= p.fromemail %></td>
    <td><%= p.title %>&nbsp;&nbsp;<a href="/show/<%=p.id%>"><i class="glyphicon glyphicon-zoom-in" style="color:#E76597;"></a></i></td>
    <td><%= p.created_at.in_time_zone("Asia/Seoul").strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><a href="/destroy/<%=p.id%>">삭제</a></td>
  </tr>
  <% end %>
</table>

</center>